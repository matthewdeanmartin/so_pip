[DEFAULT]
PROJECT_NAME = so_pip
SRC  = .
PROBLEMS_FOLDER = problems
REPORTS_FOLDER = reports
VENV_SHELL = pipenv run
PIPENV = pipenv run

MINIMUM_TEST_COVERAGE = 85

# if 1, disables bandit. Bandit disallows all shell commands.
IS_SHELL_SCRIPT_LIKE = 0

; Below this there should be 0 lint, 0 mypy, etc.
; Above this follow maximum lint
SMALL_CODE_BASE_CUTOFF = 50

MAXIMUM_LINT = 6
MAXIMUM_MYPY = 5
MAXIMUM_DEAD_CODE = 500
MAXIMUM_MANIFEST_ERRORS = 0

COMPLEXITY_CUT_OFF = 16

DOCKER_TAG=so_pip:pynt
